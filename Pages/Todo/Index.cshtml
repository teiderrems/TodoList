@page
@model TodoList.Pages.Todo.IndexModel

@{
    ViewData["Title"] = "Liste";
}

<h1>Liste</h1>
<hr/>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskModel[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskModel[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskModel[0].Completed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskModel[0].CreatedAt)
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TaskModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Completed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            
            <td class="d-flex justify-content-end align-items-center gap-1">
                    <a asp-page="./Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square h4 btn btn-primary"></i></a>
                    <a asp-page="./Details" asp-route-id="@item.Id"><i class="bi bi-ticket-detailed btn btn-info h4"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.Id"><i class="bi bi-trash3 btn h4 btn-danger"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>


